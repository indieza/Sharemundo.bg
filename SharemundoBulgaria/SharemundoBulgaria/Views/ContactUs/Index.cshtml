@model ContactInputModel
@{
    ViewData["Title"] = this.Localizer["Contact Us"];
}

<!-- Page Content -->
<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>@this.Localizer["Contact Us"]</h1>
                <span>@this.Localizer["Feel free to send us a message now!"]</span>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <partial name="_TempDataPartial" />
</div>

<div class="callback-form contact-us">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>@this.Localizer["Send us a"] <em>@this.Localizer["Message"]</em></h2>
                    <span>@this.Localizer["We are here to help you"]</span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="contact-form">
                    <form id="contact" action="" method="post">
                        <div class="row">
                            <div class="col-lg-4 col-md-12 col-sm-12">
                                <fieldset>
                                    <label>@this.Localizer[nameof(this.Model.Name)]</label>
                                    <input asp-for="Name" type="text" class="form-control" id="name" placeholder="@this.Localizer["Full Name"]">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-4 col-md-12 col-sm-12">
                                <fieldset>
                                    <label>@this.Localizer[nameof(this.Model.Email)]</label>
                                    <input asp-for="Email" type="text" class="form-control" id="email" placeholder="@this.Localizer["E-Mail Address"]">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-4 col-md-12 col-sm-12">
                                <fieldset>
                                    <label>@this.Localizer[nameof(this.Model.Subject)]</label>
                                    <input asp-for="Subject" type="text" class="form-control" id="subject" placeholder="@this.Localizer["Subject"]">
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <label>@this.Localizer[nameof(this.Model.Message)]</label>
                                    <textarea asp-for="Message" rows="6" class="form-control" id="message" placeholder="@this.Localizer["Your Message"]"></textarea>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="filled-button">@this.Localizer["Send Message"]</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}