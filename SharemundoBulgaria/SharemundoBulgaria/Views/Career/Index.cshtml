@{
    ViewData["Title"] = "Career";
}

@model CareerViewModel

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Career</h1>
                <span>We are over 20 years of experience</span>
            </div>
        </div>
    </div>
</div>
<br />
<div class="container">
    @foreach (var position in this.Model.JobPositionViewModels)
    {
        <div class="row">
            <h3>@position.Title</h3>
        </div>
        <div class="row">
            <h6>@position.CreatedOn.ToLocalTime().ToString("dd-MMMM-yyyy hh:mm:ss tt")</h6>
        </div>
        <div class="row">
            <p>@position.Location</p>
        </div>
        <div class="row">
            @Html.Raw(position.Description)
        </div>
    }
</div>