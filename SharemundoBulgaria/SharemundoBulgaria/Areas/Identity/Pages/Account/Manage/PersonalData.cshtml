@page
@model PersonalDataModel
@{
    ViewData["Title"] = this.Localizer["Personal Data"];
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@this.Localizer["Personal Data"]</h4>

<div class="row">
    <div class="col-md-12">
        <p>@this.Localizer["Your account contains personal data that you have given us. This page allows you to download or delete that data."]</p>
        <p>
            <strong>@this.Localizer["Deleting this data will permanently remove your account, and this cannot be recovered."]</strong>
        </p>
        <hr />
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">@this.Localizer["Download"]</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary">@this.Localizer["Delete"]</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}