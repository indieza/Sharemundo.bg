@{
    ViewData["Title"] = "Edit section";
}

@model EditSectionBaseModel

<h2 class="mt-4 row">
    <b>
        Edit section
    </b>
</h2>
<hr class="row" />
<div class="mt-4">
    <partial name="_TempDataPartial" />
</div>

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="form-group col-lg-12">
            <label asp-for="@this.Model.EditSectionInputModel.Id"></label>
            <select class="form-control" asp-for="@this.Model.EditSectionInputModel.Id" onchange="selectedName(this)">
                <option value="" disabled selected>Select section...</option>
                @foreach (var currentSection in Model.EditSectionViewModel.AllSections)
                {
                    <option value="@currentSection.Key">@currentSection.Value</option>
                }
            </select>
            <span asp-validation-for="@this.Model.EditSectionInputModel.Id" class="text-danger"></span>
        </div>
    </div>
    <hr />
    <div id="editSectionInputForm" style="display: none">
        <div class="row">
            <div class="form-group col-lg-12">
                <label asp-for="@this.Model.EditSectionInputModel.PageType"></label>
                <select id="pageType" class="form-control" asp-for="@this.Model.EditSectionInputModel.PageType" asp-items="@Html.GetEnumSelectList<PageType>()">
                    <option value="" disabled selected>Select page...</option>
                </select>
                <span asp-validation-for="@this.Model.EditSectionInputModel.PageType" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-12">
                <label asp-for="@this.Model.EditSectionInputModel.SectionType"></label>
                <select id="sectionType" class="form-control" asp-for="@this.Model.EditSectionInputModel.SectionType" asp-items="@Html.GetEnumSelectList<SectionType>()">
                    <option value="" disabled selected>Select section type...</option>
                </select>
                <span asp-validation-for="@Model.EditSectionInputModel.SectionType" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-12">
                <label asp-for="@this.Model.EditSectionInputModel.Name"></label>
                <input id="sectionName" class="form-control" type="text" asp-for="@this.Model.EditSectionInputModel.Name" autocomplete="off" />
                <span asp-validation-for="@this.Model.EditSectionInputModel.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-12">
                <label asp-for="@this.Model.EditSectionInputModel.Heading"></label>
                <input id="heading" class="form-control" type="text" asp-for="@this.Model.EditSectionInputModel.Heading" autocomplete="off" />
                <span asp-validation-for="@this.Model.EditSectionInputModel.Heading" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-12">
                <label asp-for="@this.Model.EditSectionInputModel.Subheading"></label>
                <input id="subheading" class="form-control" type="text" asp-for="@this.Model.EditSectionInputModel.Subheading" autocomplete="off" />
                <span asp-validation-for="@Model.EditSectionInputModel.Subheading" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-12">
                <label asp-for="@this.Model.EditSectionInputModel.Description"></label>
                <textarea id="description" asp-for="@Model.EditSectionInputModel.Description" class="form-control edit-with-tinymce" style="resize: vertical" rows="30"></textarea>
                <span asp-validation-for="@Model.EditSectionInputModel.Description" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-12">
                <label asp-for="@Model.EditSectionInputModel.Image"></label>
                <input asp-for="@Model.EditSectionInputModel.Image" type="file" class="form-control-file">
                <span asp-validation-for="@this.Model.EditSectionInputModel.Image" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-12">
                <button class="btn btn-info" asp-area="Administration" asp-controller="EditSection" asp-action="EditSection">
                    Edit
                </button>
            </div>
        </div>
    </div>
</form>
<input type="hidden" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script src="~/lib/tinymce/visualizer.js" type="text/javascript"></script>
    <script src="~/administration/js/editSectionScript.js"></script>
}