@{
    ViewData["Title"] = "Add job position";
}

@model AddJobPositionInputModel

<h2 class="mt-4 row">
    <b>
        Add job position
    </b>
</h2>
<hr class="row" />
<div class="mt-4">
    <partial name="_TempDataPartial" />
</div>

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="form-group col-lg-6">
            <label asp-for="@this.Model.Title"></label>
            <input class="form-control" type="text" asp-for="@this.Model.Title" autocomplete="off" />
            <span asp-validation-for="@this.Model.Title" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-6">
            <label asp-for="@this.Model.TitleBg"></label>
            <input class="form-control" type="text" asp-for="@this.Model.TitleBg" autocomplete="off" />
            <span asp-validation-for="@this.Model.TitleBg" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-6">
            <label asp-for="@this.Model.Location"></label>
            <input class="form-control" type="text" asp-for="@this.Model.Location" autocomplete="off" />
            <span asp-validation-for="@this.Model.Location" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-6">
            <label asp-for="@this.Model.LocationBg"></label>
            <input class="form-control" type="text" asp-for="@this.Model.LocationBg" autocomplete="off" />
            <span asp-validation-for="@this.Model.LocationBg" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-6">
            <label asp-for="@this.Model.Description"></label>
            <textarea asp-for="@Model.Description" class="form-control edit-with-tinymce" style="resize: vertical" rows="30"></textarea>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-6">
            <label asp-for="@this.Model.DescriptionBg"></label>
            <textarea asp-for="@Model.DescriptionBg" class="form-control edit-with-tinymce" style="resize: vertical" rows="30"></textarea>
            <span asp-validation-for="@Model.DescriptionBg" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <button class="btn btn-success" asp-area="Administration" asp-controller="AddJobPosition" asp-action="AddJobPosition">
                Create
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script src="~/lib/tinymce/visualizer.js" type="text/javascript"></script>
}