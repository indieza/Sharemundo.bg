@{
    ViewData["Title"] = "Add section to page";
}

@model AddSectionToPageInputModel

<h2 class="mt-4 row">
    <b>
        Add section to page
    </b>
</h2>
<hr class="row" />
<div class="mt-4">
    <partial name="_TempDataPartial" />
</div>
<form method="post">
    <div class="row">
        <div class="form-group col-lg-12">
            <label asp-for="@this.Model.PageName"></label>
            <select class="form-control" asp-for="@this.Model.PageName" asp-items="@Html.GetEnumSelectList<Pages>()">
                <option value="" disabled selected>Select page...</option>
            </select>
            <span asp-validation-for="@Model.PageName" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <label asp-for="@this.Model.SectionName"></label>
            <select class="form-control" asp-for="@this.Model.SectionName" asp-items="@Html.GetEnumSelectList<Sections>()">
                <option value="" disabled selected>Select section type...</option>
            </select>
            <span asp-validation-for="@Model.SectionName" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <label asp-for="@this.Model.Heading"></label>
            <input class="form-control" type="text" asp-for="@this.Model.Heading" />
            <span asp-validation-for="@this.Model.Heading" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <label asp-for="@this.Model.Subheading"></label>
            <input class="form-control" type="text" asp-for="@this.Model.Subheading" />
            <span asp-validation-for="@this.Model.Subheading" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <label asp-for="@Model.Description"></label>
            <textarea asp-for="@Model.Description" class="form-control edit-with-tinymce" style="resize: vertical" rows="30"></textarea>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <button class="btn btn-success" asp-area="Administration" asp-controller="AddSectionToPage" asp-action="AddSectionToPage">
                Create
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script src="~/lib/tinymce/visualizer.js" type="text/javascript"></script>
}