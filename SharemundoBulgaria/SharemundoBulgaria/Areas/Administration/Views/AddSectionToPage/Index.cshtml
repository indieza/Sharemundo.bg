@{
    ViewData["Title"] = "Add section to page";
}

@model AddSectionToPageInputModel

<h2 class="mt-4 row">
    <b>
        Add section to page
    </b>
</h2>
<hr class="row" />
<div class="mt-4">
    <partial name="_TempDataPartial" />
</div>
<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="form-group col-lg-12">
            <label asp-for="@this.Model.PageType"></label>
            <select class="form-control" asp-for="@this.Model.PageType" asp-items="@Html.GetEnumSelectList<PageType>()">
                <option value="" disabled selected>Select page...</option>
            </select>
            <span asp-validation-for="@this.Model.PageType" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <label asp-for="@this.Model.SectionType"></label>
            <select class="form-control" asp-for="@this.Model.SectionType" asp-items="@Html.GetEnumSelectList<SectionType>()">
                <option value="" disabled selected>Select section type...</option>
            </select>
            <span asp-validation-for="@Model.SectionType" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <label asp-for="@this.Model.Name"></label>
            <input class="form-control" type="text" asp-for="@this.Model.Name" autocomplete="off" />
            <span asp-validation-for="@this.Model.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <label asp-for="@this.Model.Heading"></label>
            <input class="form-control" type="text" asp-for="@this.Model.Heading" autocomplete="off" />
            <span asp-validation-for="@this.Model.Heading" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <label asp-for="@this.Model.Subheading"></label>
            <input class="form-control" type="text" asp-for="@this.Model.Subheading" autocomplete="off" />
            <span asp-validation-for="@Model.Subheading" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <label asp-for="@this.Model.Description"></label>
            <textarea asp-for="@Model.Description" class="form-control edit-with-tinymce" style="resize: vertical" rows="30"></textarea>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <label asp-for="@Model.Image"></label>
            <input asp-for="@Model.Image" type="file" class="form-control-file">
            <span asp-validation-for="@this.Model.Image" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <button class="btn btn-success" asp-area="Administration" asp-controller="AddSectionToPage" asp-action="AddSectionToPage">
                Create
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script src="~/lib/tinymce/visualizer.js" type="text/javascript"></script>
}