@{
    ViewData["Title"] = "Edit part";
}

@model EditPartBaseModel

<h2 class="mt-4 row">
    <b>
        Edit part
    </b>
</h2>
<hr class="row" />
<div class="mt-4">
    <partial name="_TempDataPartial" />
</div>

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="form-group col-lg-12">
            <label asp-for="@this.Model.EditPartInputModel.Id"></label>
            <select class="form-control" asp-for="@this.Model.EditPartInputModel.Id" onchange="selectedName(this)">
                <option value="" disabled selected>Select section...</option>
                @foreach (var currentSection in Model.EditPartViewModel.AllParts)
                {
                    <option value="@currentSection.Key">@currentSection.Value</option>
                }
            </select>
            <span asp-validation-for="@this.Model.EditPartInputModel.Id" class="text-danger"></span>
        </div>
    </div>
    <hr />
    <div id="editSectionInputForm" style="display: none">
        <div class="row">
            <div class="form-group col-lg-12">
                <label asp-for="@this.Model.EditPartInputModel.PartType"></label>
                <select id="partType" class="form-control" asp-for="@this.Model.EditPartInputModel.PartType" asp-items="@Html.GetEnumSelectList<PartType>()">
                    <option value="" disabled selected>Select part type...</option>
                </select>
                <span asp-validation-for="@this.Model.EditPartInputModel.PartType" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-12">
                <label asp-for="@this.Model.EditPartInputModel.SectionId"></label>
                <select id="sectionName" class="form-control" asp-for="@this.Model.EditPartInputModel.SectionId">
                    <option value="" disabled selected>Select section type...</option>
                    @foreach (var currentSection in Model.EditPartViewModel.AllSections)
                    {
                        <option value="@currentSection.Key">@currentSection.Value</option>
                    }
                </select>
                <span asp-validation-for="@Model.EditPartInputModel.SectionId" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-12">
                <label asp-for="@this.Model.EditPartInputModel.Name"></label>
                <input id="partName" class="form-control" type="text" asp-for="@this.Model.EditPartInputModel.Name" autocomplete="off" />
                <span asp-validation-for="@this.Model.EditPartInputModel.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-6">
                <label asp-for="@this.Model.EditPartInputModel.Heading"></label>
                <input id="heading" class="form-control" type="text" asp-for="@this.Model.EditPartInputModel.Heading" autocomplete="off" />
                <span asp-validation-for="@this.Model.EditPartInputModel.Heading" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="@this.Model.EditPartInputModel.HeadingBg"></label>
                <input id="headingBg" class="form-control" type="text" asp-for="@this.Model.EditPartInputModel.HeadingBg" autocomplete="off" />
                <span asp-validation-for="@this.Model.EditPartInputModel.HeadingBg" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-6">
                <label asp-for="@this.Model.EditPartInputModel.Subheading"></label>
                <input id="subheading" class="form-control" type="text" asp-for="@this.Model.EditPartInputModel.Subheading" autocomplete="off" />
                <span asp-validation-for="@Model.EditPartInputModel.Subheading" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="@this.Model.EditPartInputModel.SubheadingBg"></label>
                <input id="subheadingBg" class="form-control" type="text" asp-for="@this.Model.EditPartInputModel.SubheadingBg" autocomplete="off" />
                <span asp-validation-for="@Model.EditPartInputModel.SubheadingBg" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-6">
                <label asp-for="@this.Model.EditPartInputModel.Description"></label>
                <textarea id="description" asp-for="@Model.EditPartInputModel.Description" class="form-control edit-with-tinymce" style="resize: vertical" rows="30"></textarea>
                <span asp-validation-for="@Model.EditPartInputModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="@this.Model.EditPartInputModel.DescriptionBg"></label>
                <textarea id="descriptionBg" asp-for="@Model.EditPartInputModel.DescriptionBg" class="form-control edit-with-tinymce" style="resize: vertical" rows="30"></textarea>
                <span asp-validation-for="@Model.EditPartInputModel.DescriptionBg" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-12">
                <label asp-for="@Model.EditPartInputModel.Image"></label>
                <input asp-for="@Model.EditPartInputModel.Image" type="file" class="form-control-file">
                <span asp-validation-for="@this.Model.EditPartInputModel.Image" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-lg-12">
                <button class="btn btn-info" asp-area="Administration" asp-controller="EditPart" asp-action="EditPart">
                    Edit
                </button>
            </div>
        </div>
    </div>
</form>
<input type="hidden" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script src="~/lib/tinymce/visualizer.js" type="text/javascript"></script>
    <script src="~/administration/js/editPartScript.js"></script>
}